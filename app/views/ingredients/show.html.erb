  <!DOCTYPE html>
  <html lang="en">
    <head>

      <meta name="viewport" content="width=device-width, initial-scale=1">

      <link href="/assets/mealsshow.scss" rel="stylesheet">
      <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">

    </head>

    <body>

  	<div class="container">
  		<div class="card">
  			<div class="container-fliud">
  				<div class="wrapper row">
  					<div class="preview col-md-6">

  						<div class="preview-pic tab-content">
  						  <div class="tab-pane active" id="pic-1"><img src="https://www.themealdb.com/images/ingredients/<%=@ingredient.name%>.png" /></div>
  						</div>

  					</div>
  					<div class="details col-md-6">
  						<h3 class="product-title">RECIPES WITH <%= @ingredient.name %></h3>
  						<div class="product-description">
                <% @ingredient.meals.each do |meal| %>
                  <div>
                    <%= link_to meal.name, meal %>
                  </div>
                <% end %>
              </div>
  						<div class="container-fluid">
  						</div>
  					</div>
  				</div>
  			</div>
  		</div>
  	</div>
