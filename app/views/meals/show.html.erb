<div class="container">



  <div class="row">
    <h1><%= @meal.name %></h1>
  </div>

  <div class="row">

    <div class="col">
      <div class="wrapper">
        <nav id="sidebar">
          <div class="list_unstyled components">
            <div class = "ull">
              <% @meals.each do |meal| %>
                <li>
                  <a <%=link_to meal.name, meal %></a>
                </li>
              <%end%>
            </div>
          </div>
        </nav>
      </div>
    </div>

    <div class="col">
      <%=image_tag image_url(@meal.img_url), height: 500%>
    </div>

    <div class="col">
      <% @meal.ingredients.each do |ingredient| %>
        <div>
          <%= link_to ingredient.name, ingredient %>
          <%= Recipe.find_by(meal_id: @meal.id, ingredient_id: ingredient.id).measure %>
        </div>
      <% end %>
    </div>

  </div>

</div>

<div class="jumbotron">
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-12 embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src=<%=@meal.vid_url%> allowfullscreen></iframe>
  </div>
</div>
