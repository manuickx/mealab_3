<head>
  <link href="/assets/meals.scss" rel="stylesheet">
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <ul class="navbar-nav mr-auto">
    <li>
  <div class="nav-item active">
    <%= form_tag(meals_path,method: :get) do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Meal' %>
      <%= submit_tag 'Search', name: nil%>
    <% end %>
  </div>
  </li>
  <% if logged_in? %>
  <li class="nav_item active">
    <a class="nav-link" href="meals/new">Create Recipe</a>
  </li>
  <%end%>

</nav>

<div class="grid-container">

  <% @meals.each do |meal| %>
    <div style="padding: 20px">
      <%= link_to (image_tag image_url(meal.img_url), size: "175"), meal %><br>
      <%= link_to meal.name, meal %>
    </div>
  <%end%>

</div>

</body>
